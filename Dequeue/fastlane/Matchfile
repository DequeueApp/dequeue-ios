# Match configuration for code signing
# See: https://docs.fastlane.tools/actions/match/

git_url(ENV["MATCH_GIT_URL"] || "git@github.com:victorquinn/certificates.git")
storage_mode("git")

type("appstore") # The default type, can be overridden

app_identifier(["com.ardonos.Dequeue"])
username("mail@victorquinn.com")

# Use legacy encryption for compatibility with system OpenSSL
force_legacy_encryption(true)

